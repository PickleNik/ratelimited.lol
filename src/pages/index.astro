---
import Layout from "../layouts/Layout.astro";
import User from "../components/User.astro";
import Elon from "../components/Elon";

import LogoIcon from "../components/ui/icons/Logo.astro";
import HomeIcon from "../components/ui/icons/Home.astro";
import ExploreIcon from "../components/ui/icons/Explore.astro";
import NotificationIcon from "../components/ui/icons/Notifications.astro";
import MessageIcon from "../components/ui/icons/Messages.astro";
import ListIcon from "../components/ui/icons/List.astro";
import BookmarkIcon from "../components/ui/icons/Bookmark.astro";
import CommunityIcon from "../components/ui/icons/Community.astro";
import LimitedIcon from "../components/ui/icons/Limited.astro";
import ProfileIcon from "../components/ui/icons/Profile.astro";
import MoreIcon from "../components/ui/icons/More.astro";
import GithubIcon from "../components/ui/icons/Github.astro";

import Button from "../components/ui/Button.astro";

---

<Layout title="RateLimited">
  <main id="container" class="flex md:flex-row flex-col">
    <div
      class="relative flex flex-col md:border-r border-b md:border-b-0 p-4 w-full md:w-72 md:h-screen gap-3 border-neutral-800"
    >
      <LogoIcon />
      <div
        id="home"
        class="hidden md:flex p-3 duration-300 gap-6 hover:bg-neutral-500 hover:bg-opacity-25 rounded-full font-bold items-center cursor-pointer text-2xl"
      >
        <HomeIcon />
        Home
      </div>
      <div
        id="explore"
        class="hidden md:flex p-3 duration-300 gap-6 hover:bg-neutral-500 hover:bg-opacity-25 rounded-full items-center cursor-pointer text-2xl"
      >
        <ExploreIcon />
        Explore
      </div>
      <div
        id="notifs"
        class="hidden md:flex p-3 duration-300 gap-6 hover:bg-neutral-500 hover:bg-opacity-25 rounded-full items-center cursor-pointer text-2xl"
      >
        <NotificationIcon />
        Notifications
      </div>
      <div
        id="messages"
        class="hidden md:flex p-3 duration-300 gap-6 hover:bg-neutral-500 hover:bg-opacity-25 rounded-full items-center cursor-pointer text-2xl"
      >
        <MessageIcon />
        Messages
      </div>
      <div
        id="lists"
        class="hidden md:flex p-3 duration-300 gap-6 hover:bg-neutral-500 hover:bg-opacity-25 rounded-full items-center cursor-pointer text-2xl"
